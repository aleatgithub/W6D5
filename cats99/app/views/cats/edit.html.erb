
<h1>Edit this Cat</h1>

<form action="<%=cat_url(@cat)%>"method="post"> 
  <input type="hidden" name="_method" value="PATCH">

<label for="name">Name: 
  <input type="text" id="name"
      name="cat[name]"
      value="<%= @cat.name %>"
      >
<br>
</label>
<label for="birth_date">Birth Date: 
  <input type="date" id="birth_date" name="cat[birth_date]" value="<%=@cat.birth_date%>">
</label>
<br>
<label for="color">Color: 
  <select name="cat[color]">
    <option disabled <%= @cat.color ? "" : "selected" %>> ---Select Color--</option>
    <option value="brown" <%=@cat.color == "brown" ? "selected" : "" %>>Brown</option>
    <option value="white" <%=@cat.color == "white" ? "selected" : "" %>>White</option>
    <option value="grey" <%=@cat.color == "grey" ? "selected" : "" %>>Grey</option>
    <option value="black" <%=@cat.color == "black" ? "selected" : "" %>>Black</option>
  </select>
</label>
<br>
<input type="radio" <%= @cat.sex == "M" ? "checked" : "" %>name="cat[sex]" value="M" id="cat_sex_male">
  <label for-"cat_sex_male">Male</label>
   
<input type="radio" <%= @cat.sex == "F" ? "checked" : "" %> name="cat[sex]" value="F" id="cat_sex_female">
  <label for-"cat_sex_female">Female</label>
<br>
<label for="description">Description:
  <textarea name="cat[description]" value=""><%=@cat.description%>
  </textarea>
</label>
<br>
<input type="submit" value="Update Cat">
</form>